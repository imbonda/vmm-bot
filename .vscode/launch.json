    "version": "0.2.0",
    "configurations": [
        {
            "name": "[GO] Run Program",
            "type": "go",
            "mode": "auto",
            "request": "launch",
            "program": "${workspaceFolder}/cmd/main.go",
            "envFile": "${workspaceFolder}/.env",
        },

        {
            "name": "[GO] Run Current File",
            "type": "go",
            "mode": "auto",
            "request": "launch",
            "program": "${file}",
        },

        {
            "name": "[GO] Test Current File",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${file}",
            "cwd": "${fileDirname}"
        },

        {
            "name": "[GO] Run Current Tests",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${fileDirname}"
        }
    ]
}